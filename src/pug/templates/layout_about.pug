include ../data/data
include ../mixins/mixins
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Cormorant+Infant:wght@700&family=Cormorant:wght@700&family=Montserrat:wght@400;500;700&display=swap" rel="stylesheet")
        title UACOLOUR
        style(type='text/css').
            HTML {
                background-repeat: no-repeat;
                background-position:  50% 0;
                /* Mobile layout by default */
                background-image: url( "./static/img/about__full.png" );
                
                }
            @media   ( min-width: 360px ) and (max-width:809px) {
                HTML {
                    background-image: url("./static/img/about__sm.png");
                    background-position:  50% 0;
                    /*background-position-y: 0;*/
                    }
            }
            @media ( min-width: 810px ) and (max-width:1365px) {
                HTML {
                    background-image: url("./static/img/about__m.png");
                    background-position:  50% 0;
                    /*background-position-y: 0;*/
                    }
            
            }
            @media ( min-width: 1366px ) and (max-width:1919px) {
                HTML {
                    background-image: url("./static/img/about__lg.png");
                    background-position:  50% 0;
                    /*background-position-y: 0;*/
                    }
            
            }
        link(rel="stylesheet" type="text/css" href="pixel-glass/styles.css")
        //link(rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css")
        link(rel="stylesheet" href="./src/css/style.css")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js")
        script(type="text/javascript" src="pixel-glass/script.js")
        
    body 
       
        block nav
        include ../includes/nav_section

        block main
    
        block footer 
        include ../includes/footer
